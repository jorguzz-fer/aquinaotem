generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model MissingItem {
  id            String   @id @default(uuid())
  city          String   @default("Osasco")
  category      String?
  text_original String
  comment       String?
  created_at    DateTime @default(now())
  ip_hash       String?
}

model UxMetric {
  id              String   @id @default(uuid())
  session_id      String
  page            String
  ttfc_ms         Int
  first_focus_ms  Int?
  device_type     String
  referrer        String?
  created_at      DateTime @default(now())
}
